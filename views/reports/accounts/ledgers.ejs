    <form id="ledgerForm">

        <div id="kt_app_content_container" class="app-container  container-xxl "
            style="margin-bottom: 30px; margin-top: 30px;">

            <div style="padding: 30px;" class="card card-p-0 card-flush">

                <div class="card-body">
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="row">
                                <div class="col-lg-3">
                                    <label class="form-label">Select Date</label>
                                    <input class="form-control form-control-solid" placeholder="Pick date range"
                                        id="kt_daterangepicker_4" name="date" />
                                </div>
                                <div class="col-lg-5">
                                    <label class="form-label">Select Ledger Name</label>
                                    <select class="form-select form-select-solid" data-control="select2"
                                        data-placeholder="Select Ledger Name" name="ledgerName" id="ledgerName">
                                        <option></option>
                                        <% ledgerData.forEach((info)=> {%>
                                            <option value="<%=info.id%>">
                                                <%=info.name%>
                                            </option>
                                            <%}) %>
                                    </select>
                                </div>
                                <div class="col-lg-2">
                                    <label class="form-label">Narration</label>
                                    <select class="form-select form-select-solid" name="narration" id="narration" data-control="select2" data-placeholder="Select Narration">
                                        <option></option>
                                        <option value="true">Yes</option>
                                        <option value="false" selected>No</option>
                                    </select>
                                </div>
                                <div class="col-lg-2">
                                    <label class="form-label" for="" style="visibility: hidden;">.</label> <br>                                    
                                    <button type="button" onclick="getLedgerReport()"
                                        class="btn btn-sm btn-primary">Preview</button>
                                </div>
                            </div>
                        </div>
                    </div>
                 </div>
            </div>

        </div>


        </form>

