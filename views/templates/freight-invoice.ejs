    <style>
        body {
            margin: 0;
            overflow: hidden;   
        }

        .container1 {
            max-width: 100%;
            /* Set your desired maximum width */
            margin: 0 auto;
            overflow: hidden;
            border: 2px solid black;
            margin: 10px;
        }

